<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper
PUBLIC "-//mybatis.org/DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.sirenorder.mapper.PointMapper">
    <select id="select" resultType="point">
		SELECT * 
		FROM POINT
		WHERE POINT = #{point_id}
    </select>
    <update id = "update"><!-- 포인트 모두 사용  -->
    	UPDATE POINT
    	SET POINT = POINT - #{point}
    	WHERE USERS_ID = #{users_id} AND CHAIN_NAME = #{chain_name}
    </update>
    <select id="selectByChain_name" resultType="point">
		SELECT * 
		FROM POINT
		WHERE CHAIN_NAME = #{chain_name} 
    </select>
    <insert id ="insert">	
    	INSERT INTO POINT
        	 VALUES(#{point_id}, #{users_id}, #{point})
    </insert>
</mapper>